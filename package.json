{
  "name": "knowid-backend",
  "version": "0.1.0",
  "description": "Serverless + Nest.Js + GraphQL",
  "author": "Kelvin",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy": "sls deploy --verbose",
    "package": "sls package",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings 0",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:cov": "jest --verbose --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest/jest-e2e.json",
    "ddb:install": "sls dynamodb install",
    "ddb:start": "sls dynamodb start",
    "sls:start": "sls offline start",
    "genres": "ts-node genres.ts -- \"src/**/*.schema.ts\" \"resource/dynamodb.yml\""
  },
  "dependencies": {
    "@nestjs/common": "7.4.4",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.4.4",
    "@nestjs/graphql": "7.7.0",
    "@nestjs/platform-express": "7.4.4",
    "apollo-server-express": "2.18.2",
    "aws-serverless-express": "3.3.8",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "dynamoose": "2.3.0",
    "graphql": "15.3.0",
    "graphql-tools": "7.0.0",
    "nestjs-dynamoose": "0.2.9",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "type-graphql": "1.1.0",
    "uuid": "8.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.2",
    "@nestjs/testing": "7.4.4",
    "@shelf/jest-dynamodb": "1.7.0",
    "@types/aws-lambda": "8.10.64",
    "@types/aws-serverless-express": "3.3.3",
    "@types/express": "4.17.8",
    "@types/jest": "26.0.15",
    "@types/js-yaml": "3.12.5",
    "@types/node": "14.14.3",
    "@types/serverless": "1.78.6",
    "@types/supertest": "2.0.10",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "change-case": "4.1.1",
    "eslint": "7.12.0",
    "eslint-config-prettier": "6.14.0",
    "eslint-plugin-import": "2.22.1",
    "glob-promise": "3.4.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "jest-extended": "^0.11.5",
    "js-yaml": "3.14.0",
    "lint-staged": "10.5.0",
    "prettier": "2.1.2",
    "serverless": "2.8.0",
    "serverless-dynamodb-local": "0.2.39",
    "serverless-offline": "6.8.0",
    "serverless-webpack": "^5.3.5",
    "supertest": "5.0.0",
    "ts-jest": "26.4.3",
    "ts-loader": "8.0.7",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "preset": "@shelf/jest-dynamodb",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 45000,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1"
    },
    "setupFilesAfterEnv": [
      "jest-extended",
      "<rootDir>/../jest/jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
